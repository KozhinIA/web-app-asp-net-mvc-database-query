@using WebAppAspNetMvcDatabaseQuery.Models
@model List<Book>

<h3>Книги</h3>

@Html.ActionLink("Добавить запись", "Create", "Books")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Автор
            </th>
            <th>
                ISBN
            </th>
            <th>
                Год издания книги
            </th>
            <th>
                Дата создания записи
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>
                    @book.Name
                </td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Isbn
                </td>
                <td>
                    @book.Year
                </td>
                <td>
                    @book.CreateAt.ToString("dd-MM-yyyy HH:mm:ss")
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", "Books", new { id = book.Id }, new { })
                    @Html.ActionLink("Изменить", "Edit", "Books", new { id = book.Id }, new { })
                </td>
            </tr>
        }
    </tbody>
</table>